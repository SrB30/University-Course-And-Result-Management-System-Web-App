<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=0.00">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("style", false)
    <style>
        body {
            font-family: "Lato", sans-serif;
            transition: background-color .5s;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidenav a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        #main {
            transition: margin-left .5s;
            padding: 16px;
        }
    </style>
</head>
<body>

    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">Menu Bar &times;</a>
        <ul style="font-size:5%">
            <li style="font-size: small;"><h4 style="background-color: red;"></h4>@Html.ActionLink("Home", "Index", "Home")</h1></li>
            <li></li>
            <li>@Html.ActionLink("Save Department", "Save", "Department")</li>
            <li>@Html.ActionLink("View All Department", "ShowDepartment", "Department")</li>
            <li>@Html.ActionLink("Save Course", "Save", "Course")</li>
            <li>@Html.ActionLink("Save Teacher", "Save", "Teacher")</li>
            <li>@Html.ActionLink("Course Assign To Teacher", "Assign", "AssignCourseToTeacher")</li>
            <li>@Html.ActionLink("View Course Statics", "Statics", "CourseStatics")</li>
            <li>@Html.ActionLink("Register Student", "Register", "RegisterStudent")</li>
            <li>@Html.ActionLink("Allocate Class Room", "ClassRoom", "AllocateClassRoom")</li>
            <li>@Html.ActionLink("View Class & Room Allocation Information", "ClassRoomScedule", "ClassRoomSceduleAllocation")</li>
            <li>@Html.ActionLink("Enroll In A course", "EnrollInACourse", "EnrollCourseToStudeent")</li>
            <li>@Html.ActionLink("Save Student Result", "SaveStudentResult", "SaveStudentsResult")</li>
            <li>@Html.ActionLink("View Student Result", "Result", "StudentResult")</li>
            <li>@Html.ActionLink("Unassign All Courses", "UnassignCourses", "UnassignAllCourses")</li>
            <li>@Html.ActionLink("Unallocate All Rooms", "UnallocateRooms", "UnallocateAllRooms")</li>
        </ul>
    </div>



    <div class="container body-content">

        <div id="main" align="left">

            <div style="float:left"><span style="font-size: 30px; cursor: pointer" onclick="openNav()">&#9776;</span></div>
            <div align="center" style="float:left">
                @RenderBody()
            </div>
            <hr />
            <footer></footer>
        </div>
    </div>

    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "350px";
            document.getElementById("main").style.marginLeft = "250px";
            document.body.style.backgroundColor = "rgba(0,0,0,0.4)";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.body.style.backgroundColor = "white";
        }
    </script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
