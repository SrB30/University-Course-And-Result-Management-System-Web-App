@model UniversityManagementWebApp.Models.Teacher
@{
    ViewBag.Title = "Save";
    Layout = "../Shared/view1.cshtml";
}

@section style
{
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
}
<body>
    @using (Html.BeginForm())
    {
        <table>
            <tr>
                <td>
                    @Html.Label("Name")
                </td>
                <td>
                    @Html.TextBox("Name")
                    @Html.ValidationMessage("Name")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Address")
                </td>
                <td>
                    @Html.TextBox("Address")
                    @Html.ValidationMessage("Address")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Email")
                </td>
                <td>
                    @Html.TextBox("Email")
                    @Html.ValidationMessage("Email")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("ContactNo")
                </td>
                <td>
                    @Html.TextBox("ContactNo")
                    @Html.ValidationMessage("ContactNo")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("DesignationId")
                </td>
                <td>
                    @Html.DropDownList("DesignationId", new SelectList(ViewBag.Designations, "Value", "Text"))
                    @Html.ValidationMessage("DesignationId")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("DepartmentId")
                </td>
                <td>
                    @Html.DropDownList("DepartmentId", new SelectList(ViewBag.Departments, "Value", "Text"))
                    @Html.ValidationMessage("DepartmentId")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("CreditToBeTaken")
                </td>
                <td>
                    @Html.TextBox("CreditToBeTaken")
                    @Html.ValidationMessage("CreditToBeTaken")
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <button id="save">Save</button>
                </td>
            </tr>
        </table>
    }
    @if (ViewBag.Message != null)
    {
        <h3>@ViewBag.Message</h3>
    }

    @section scripts
    {
        <script src="~/Scripts/jquery-3.5.1.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    </body>
